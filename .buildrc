{
    "enableTerminal": true,
    "packagePrefix": "@collaborated/",
    "allowedTargets": [
        "win",
        "linux"
    ],
    "commands": [
        {
            "id": "common",
            "type": "typescript",
            "package": "common",
            "runInEnvironments": [
                "prod",
                "dev"
            ]
        },
        {
            "id": "interact",
            "type": "typescript",
            "package": "interact",
            "runInEnvironments": [
                "prod",
                "dev"
            ]
        },
        {
            "id": "docs",
            "type": "storybook",
            "package": "web",
            "port": "6006",
            "out": "../../storybook-dist",
            "runInEnvironments": [
                "prod",
                "dev"
            ]
        },
        {
            "id": "gql",
            "type": "typescript",
            "package": "gql",
            "runInEnvironments": [
                "dev",
                "prod"
            ]
        },
        {
            "id": "prisma",
            "type": "custom",
            "package": "web",
            "command": "prisma generate",
            "runInEnvironments": [
                "prod"
            ]
        },
        {
            "id": "web",
            "type": "next",
            "package": "web",
            "port": 3000,
            "runInEnvironments": [
                "prod",
                "dev"
            ]
        },
        {
            "id": "server",
            "type": "custom",
            "package": "server",
            "command": "microbundle -f cjs --target node",
            "devcommand": "microbundle watch -f cjs --target node",
            "runInEnvironments": [
                "prod",
                "dev"
            ]
        },
        {
            "id": "app",
            "type": "typescript",
            "package": "app",
            "runInEnvironments": [
                "prod",
                "dev"
            ]
        },
        {
            "id": "addon",
            "type": "typescript",
            "package": "test-addon",
            "dontUsePackagePrefix": true,
            "runInEnvironments": [
                "dev"
            ]
        },
        {
            "id": "manager",
            "type": "typescript",
            "package": "manager",
            "runInEnvironments": [
                "prod",
                "dev"
            ]
        }
    ]
}
