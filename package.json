{
  "name": "collaborated",
  "workspaces": {
    "packages": [
      "packages/*",
      "test/*"
    ],
    "nohoist": [
      "**/@collaborated/interact"
    ]
  },
  "private": true,
  "license": "GPL-3.0",
  "scripts": {
    "docs": "yarn buildts && yarn workspace @collaborated/web docs",
    "docsync": "git fetch && git pull && git push",
    "netlifydeploy": "yarn && yarn buildts && yarn workspace @collaborated/web snowpack build",
    "lint": "yarn eslint . --ext .js,.jsx,.ts,.tsx",
    "betatest": "yarn build && cd server && mix run --no-halt"
  },
  "devDependencies": {
    "@floffah/build": "^0.2.1",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "all-contributors-cli": "^6.20.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-workspaces": "^0.6.2",
    "lerna": "^4.0.0"
  },
  "version": "0.0.0"
}
